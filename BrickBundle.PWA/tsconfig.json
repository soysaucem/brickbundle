{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "outDir": "./wwwroot/js",
    "module": "es6",
    "rootDir": "./TypeScript",
    "allowUnreachableCode": false,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "include": [ "TypeScript/**/*" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
